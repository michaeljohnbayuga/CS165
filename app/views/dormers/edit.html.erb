<%= render :file=> 'app/views/partials/header.html.erb' %>
<%if current_user.present? %>
<div class="ui fixed center aligned container">
	<div class="ui basic segment" style="margin: auto; width: 70%;">
	  	<h1 class="ui header">
	    	<div><i class="edit icon"></i>Edit Dormer</div>
	  	</h1>
	  	<div class="ui basic segment" style="margin-top: 50px">
	  		<%= render 'show', form: @dormer %>
			<br>
			<%= link_to "Delete".html_safe, {action: "destroy", id: @dormer.id}, method: :delete, style: 'color:#fff;', class: 'ui red button' %>
		</div>
	</div>
</div>
<%else%>
<h1>PLEASE LOG-IN FOR ACCESS</h1>
<% end %>
